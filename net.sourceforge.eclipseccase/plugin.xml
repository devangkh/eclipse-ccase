<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="net.sourceforge.eclipseccase"
   name="Clearcase Plugin"
   version="0.3.1"
   provider-name="Matt Conway"
   class="net.sourceforge.eclipseccase.ClearcasePlugin">

   <runtime>
      <library name="clearcase.jar"/>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.boot"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.swt"/>
      <import plugin="org.eclipse.team.core"/>
      <import plugin="org.eclipse.team.ui"/>
   </requires>


   <extension
         id="ClearcaseProvider"
         name="Clearcase Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="net.sourceforge.eclipseccase.ClearcaseProvider">
         </run>
      </runtime>
      <one-of-nature
            id="org.eclipse.team.repository-provider">
      </one-of-nature>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            objectClass="org.eclipse.core.resources.IResource"
            adaptable="true"
            label="Clearcase Decorator"
            state="true"
            class="net.sourceforge.eclipseccase.ui.ClearcaseDecorator"
            id="net.sourceforge.eclipseccase.ui.decorator">
      </decorator>
   </extension>
   <extension
      id="net.sourceforge.eclipseccase.statechangedmarker" 
      point="org.eclipse.core.resources.markers" 
      name="Clearcase state changed">
      <super type="org.eclipse.core.resources.marker"/>
      <persistent value="false"/>
	  <attribute name="statechanged"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            id="net.sourceforge.eclipseccase.popups.Associate">
         <action
               label="Associate with clearcase"
               class="net.sourceforge.eclipseccase.ui.AssociateProjectAction"
               menubarPath="team.main/group3"
               id="net.sourceforge.eclipseccase.popups.associate">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IResource"
            adaptable="true"
            id="net.sourceforge.eclipseccase.popups.BuiltIn">
         <filter
               name="projectNature"
               value="net.sourceforge.eclipseccase.ClearcaseProvider">
         </filter>
         <action
               label="Dissociate from clearcase"
               class="net.sourceforge.eclipseccase.ui.DissociateProjectAction"
               menubarPath="team.main/group3"
               id="net.sourceforge.eclipseccase.popups.dissociate">
         </action>
         <action
               label="Uncheckout"
               class="net.sourceforge.eclipseccase.ui.UndoCheckOutAction"
               menubarPath="team.main/group1"
               id="net.sourceforge.eclipseccase.popups.uncheckout">
         </action>
         <action
               label="Checkin"
               class="net.sourceforge.eclipseccase.ui.CheckInAction"
               menubarPath="team.main/group1"
               id="net.sourceforge.eclipseccase.popups.checkin">
         </action>
         <action
               label="Checkout"
               class="net.sourceforge.eclipseccase.ui.CheckOutAction"
               menubarPath="team.main/group1"
               id="net.sourceforge.eclipseccase.popups.checkout">
         </action>
         <action
               label="Add"
               class="net.sourceforge.eclipseccase.ui.AddToClearcaseAction"
               menubarPath="team.main/group1"
               id="net.sourceforge.eclipseccase.popups.add">
         </action>
         <action
               label="Delete"
               class="org.eclipse.team.ui.actions.DeleteAction"
               menubarPath="team.main/group1"
               id="net.sourceforge.eclipseccase.popups.delete">
         </action>
         <action
               label="Version Tree"
               class="net.sourceforge.eclipseccase.ui.VersionTreeAction"
               menubarPath="team.main/group2"
               id="net.sourceforge.eclipseccase.popups.versiontree">
         </action>
         <action
               label="History"
               class="net.sourceforge.eclipseccase.ui.HistoryAction"
               menubarPath="team.main/group2"
               id="net.sourceforge.eclipseccase.popups.history">
         </action>
         <action
               label="Compare with predecessor"
               class="net.sourceforge.eclipseccase.ui.CompareWithPredecessorAction"
               menubarPath="team.main/group2"
               id="net.sourceforge.eclipseccase.popups.comparepredecessor">
         </action>
         <action
               label="Find checkouts"
               class="net.sourceforge.eclipseccase.ui.FindCheckOutsAction"
               menubarPath="team.main/group2"
               id="net.sourceforge.eclipseccase.popups.findcheckouts">
         </action>
      </objectContribution>
   </extension>

</plugin>
